/*Список причин выпуска*/
---------------------
/*COLUMNS_START
<0>OBOR_NAME</0><end>
COLUMNS_END*/

/*TITLES_START
<0>Наименование оборудования</0><end>
TITLES_END*/
--------------------

Select  Id_Obor, 
        Name_Obor OBOR_NAME, 
        Group_Id 
From    Skl.V_OPP_SPR_OBOR_CEH t 
Where   Nvl( t.Kol, 0 ) >= 1 
        And Nvl( t.Pr, 0 ) = 1
	And /*FILTER_START*/ (1=1) /*FILTER_END*/
	/*KEYWORD_START*/ And Translate (Upper(t.Name_Obor), ' .-', '%') Like '%'||Translate(Upper(:V_Keyword),' .-*', '%')||'%' /*KEYWORD_END*/
	