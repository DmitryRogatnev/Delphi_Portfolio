/*Ремонтные изделия для АЭС*/
---------------------
/*COLUMNS_START
<0>Rep_Doc_Num</0><1>Product_Name</1><end>
COLUMNS_END*/

/*TITLES_START
<0>Номер документации</0><1>Изделие</1><end>
TITLES_END*/
--------------------

Select t.* 
From Stp.v_Repair_Doc_Products t
Where  /*FILTER_START*/ (1=1) /*FILTER_END*/        
       /*KEYWORD_START*/ And ( Upper(t.Rep_Doc_Num) like '%'||Upper(:V_Keyword)||'%'
        Or Upper(t.Product_Name) like '%'||Upper(:V_Keyword)||'%' /*KEYWORD_END*/